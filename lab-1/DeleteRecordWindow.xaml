<Window x:Class="lab_1.DeleteRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удаление записи" Height="150" Width="300">
    <Grid>
        <Label Content="Введите номер записи для удаления"/>
        <TextBox x:Name="recordNumberTextBox" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Content="Удалить" HorizontalAlignment="Right" Margin="0,30,10,0" VerticalAlignment="Top" Width="75" Click="DeleteRecordButton_Click"/>
    </Grid>
</Window>
